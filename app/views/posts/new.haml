  %h1 Add Some Code
  =error_messages_for :post
  %form{:action => self.posts_path, :method => 'post'}
    %input{:type => 'hidden', :name => 'authenticity_token', :value => self.form_authenticity_token}

    .options
      .language
        %label Language:
        %input{:type => 'text', :name=>'post[language_name]'} 
      .name
        %label Title:
        %input{:type => 'text', :name=>'post[title]'}
        
    %textarea{:name => 'post[body]'}= @post.body
    %button paste
